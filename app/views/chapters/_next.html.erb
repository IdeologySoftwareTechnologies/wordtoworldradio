<% if @bibles.count != 0 %>   
  <% if @chapter.id == @bible.chapters.last.id %> 
    <% if @bible.next.chapters.count == 0 %>        
      <%= link_to category_bible_chapter_path(params[:category_id],@bibles.first,@bibles.first.chapters.first),class: "btn btn-default pull-right" do %> 
          <i class="glyphicon glyphicon-chevron-right"></i>
      <% end %>
      <%elsif @chapter == @bibles.last.chapters.last %>
      <%= link_to category_bible_chapter_path(params[:category_id],@bibles.first,@bibles.first.chapters.first),class: "btn btn-default pull-right" do %> 
        <i class="glyphicon glyphicon-chevron-right"></i>
      <% end %>              
      <%else%>
        <%= link_to category_bible_chapter_path(params[:category_id],@bible.next,@chapter.next),class: "btn btn-default pull-right" do %> 
          <i class="glyphicon glyphicon-chevron-right"></i>
        <% end %>
    <%end%>
  <%else%>     
    <%= link_to category_bible_chapter_path(params[:category_id],@bible,@chapter.next),class: "btn btn-default pull-right" do %> 
      <i class="glyphicon glyphicon-chevron-right"></i>
    <% end %>
  <%end%>
<%end%>



