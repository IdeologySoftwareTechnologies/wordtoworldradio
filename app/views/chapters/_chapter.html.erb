<div class="row b">
  <div class="col-md-2"></div>
  <div class="col-md-8">
      <div class="row">
        <div class="col-md-7 "> 



        <div class="btn-group">
  <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
    <%= @bible.name%> <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%if @bibles.count!=0 %>
                    <% @bibles.in_groups_of(3, false) do |row_bible| %>   
                        <% row_bible.each do |bible|%>
                            <%unless bible.chapters.count== 0%>
                                <% @first_chapter = bible.chapters.first %>
                                <li><%=link_to bible.name,bible_chapter_path(bible , @first_chapter)%></li>
                            <%else%>
                                <li><%=link_to bible.name, bible_chapters_path(bible)%>
                                
                                </li>
                            <%end%>                          
                        <%end%>
                    <%end%>
                <%else%>
                Nothing found
                <%end%></li>
   
  </ul>
</div>
</div>






        
          
               
        <div class="col-md-5">
        
          <%#= render 'bibles/recoment'%>



          <div class="btn-group">
  <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
   <%= @chapter.chapter_number%> <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
   <li><%= render 'bibles/show'%></li>
  </ul>
</div>




          
        </div>
      </div>
    </div>    
    <div class="col-md-2" >      
    </div>
</div>



