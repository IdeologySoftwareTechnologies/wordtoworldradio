<div class="container">
<p id="notice"><%= notice %></p>
<style type="text/css">
   body { background-color: #EBC053; }
      .img-responsive:hover{
       }
</style>
<br>

<div class="row">
  <div class="visible-lg visible-md">
    <div class="bar">
      <%= render 'player' %>
    </div>
  </div>
</div>



<div class="row">
<div class="visible-sm">
  <div class="bar-sm">
    <%= render 'player' %>
  </div>
</div>
</div>


<div class="visible-xs">
  <div class="container-fluid">
  <div class="bar-sm">
    <%= render 'mobile' %>
  </div>
  </div>
</div>




<div class="col-md-4" >
  <div id="current">
      <div class="current-text">
       Album:  <%= @album.name %>
      </div>
     <%=image_tag  @album.cover_url ,:class => "img-responsive" %>  <br>
  </div>
</div>


<div class="col-md-4">
  <div class="playlist"> 
    <%= render 'playlist'%>
  </div>
</div>

<div class="col-md-4">
  <%= render 'slider' %>
</div>

<div class="row">
  <div class="col-lg-12">
  </div>
      <% @albums.each do |album|  %>
        <div class="col-lg-2 col-md-2 col-xs-6 ">
            <a class="thumbnail" href="<%= album_path(album) %>">
              <%= image_tag album.cover_url , :class => "img-responsive" %></a>
        </div>
      <% end %>
</div>    


<div class="search-form">
          <%= form_tag(album_path, :method => "get", class: "navbar-form", id: "search-form") do %>
        <div class="col-sm-3 col-md-3 pull-right">
          <form class="navbar-form" role="search">
            <div class="input-group">
              <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Albums", id: "srch-term" %>
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
              </div>
            </div>
          </form>
        </div>   
      </div>
            <% end %>


 <%#= will_paginate @albums,renderer: BootstrapPagination::Rails, :page_links => false %>

<div class="col-md-6">
    <%= form_for :audio,url: audios_path(album_id: @album.id) do |f| %>
    <br/>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :artist %><br>
      <%= f.text_field :artist %>
    </div>
    <div class="field">
      <%= f.label :audio %><br>
      <%= f.file_field :audio %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
    <% end %>
</div>


<%#= render_shareable  %>


<script type="text/javascript">
  $('#carousel-example-generic-mobile').swipe( {
    swipeLeft: function() {
        $(this).carousel('next');
    },
    swipeRight: function() {
        $(this).carousel('prev');
    },
    allowPageScroll: 'vertical'
});
</script>


<%= form_tag album_path , method: :get do  %>
  <% @album.audios.each do  |audio| %>
    <%= check_box_tag "audio_ids[]",audio.id  %>
    <%= audio.name %><br/>
  <% end %>
  <%= submit_tag "play", :class => "play"%>
<% end %>


