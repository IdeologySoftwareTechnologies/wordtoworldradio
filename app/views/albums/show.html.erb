<p id="notice"><%= notice %></p>
<head>
  <title>Juke Box</title>
</head>

<style type="text/css">
body { background-color: #EBC053; }
      .img-responsive:hover{
}
</style>
<br>

<div class="row">

<div class="carousel slide" id="myCarousel" >
  <div class="carousel-inner" style="height:180px">
    
    <div class="item active" >
      <div class="col-lg-3"><a href="<%= album_path(@album_first) %>">
      <%= image_tag @album_first.cover_url , :class => "img-responsive" %></a></div>
    </div>
    <% @albums_remain.each do |album| %>
    <div class="item" >
      <div class="col-lg-3"><a href="<%= album_path(album) %>"><%= image_tag album.cover_url , :class => "img-responsive" %></a></div>
    </div>
    <%end%>
    
  </div>
  <a class="left carousel-control" href="#myCarousel" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>

</div>


<div class="search-form">
  <%= form_tag(album_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="col-sm-3 col-md-3 pull-right">
      <form class="navbar-form" role="search">
        <div class="input-group">
          <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Albums", id: "srch-term" %>
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
      </form>
    </div>  
  <% end %> 
</div>


<div id="current">
  <div class="current-text">
    Album:  <%= @album.name %>
  </div>
  <%=image_tag  @album.banner_url(:thumb) ,:class => "img-responsive" %>  <br>
</div>

<div class="row">
  <div class="visible-lg visible-md">
    <div class="bar">
      <%= render 'player' %>
    </div>
  </div>
</div>



<div class="row">
  <div class="visible-sm">
    <div class="bar-sm">
      <%= render 'player' %>
    </div>
  </div>
</div>


<div class="visible-xs">
  <div class="container-fluid">
    <div class="bar-sm">
      <%= render 'mobile' %>
    </div>
  </div>
</div>


<div class="row">
  <%= render "playlist" %>
  </div>

<div class="row">
  <% @album_bottom_pagiantion.each do |album|  %>
    <div class="col-xs-6 col-md-3">
      <a class="thumbnail" href="<%= album_path(album) %>">
      <%= image_tag album.cover_url , :class => "img-responsive" %></a>
    </div>
  <% end %>
  </div>

<div class="row">
<center>
  <%= will_paginate @album_bottom_pagiantion,renderer: BootstrapPagination::Rails, :page_links => false , remote: true %>
  </center>
</div>

<div class="row">
  <%#= render_shareable  %>
</div>

<div class="row">
  <%= render "social" %>
</div>
